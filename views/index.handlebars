
<div class="container">
  <div class="row text-white bg-dark mb-5">
    <div class="col-sm-12 text-center">
      <h1>Rajer-That-Burgers!</h1>
      <img src="/assets/img/burger.png" alt="burger" width="350px">
      <h3>How many can you eat?</h3>
    </div>
  </div>
  <div class="row">
    <div class="col text-center">
      <h2>Place an order: </h2>
      <form class="create-form form-inline justify-content-center">
        <div class="form-group">
          <label for="bu">Burger Name:</label>
          <input class="mx-3" type="text" id="bu" name="name">
        </div>
        <button class="btn btn-primary" type="submit">Submit Order</button>
      </form>
    </div>
  </div>
  <div class="row">
    <div class="col-12 col-lg-6 text-center">
      <h2>Burgers to-be devoured: </h2>
      <ul class="text-left burger-list">
        {{#each burgers}}
        {{#unless devoured}}
          <li>
            {{burger_name}}
            <button class="devoured  btn btn-success float-right text-right px-1 ml-2" data-id="{{id}}">Devour</button>
            <button class="delete-burger  btn btn-danger float-right text-right px-1 ml-2" data-id="{{id}}">Delete</button>
          </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-12 col-lg-6 text-center">
      <h2>Burgers Devoured:</h2>
      <ul class="text-left burger-list">
        {{#each burgers}}
        {{#if devoured}}
          <li>
            {{burger_name}}
            <button class="delete-burger  btn btn-danger float-right text-right px-1 ml-2" data-id="{{id}}">Delete</button>
          </li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  
</div>

